<form class="form-signin">
	<h2 class="form-signin-heading">Authenticate</h2>
	<label for="loginForm_username" class="sr-only">Username</label>
	<input type="text" placeholder="Username" id="loginForm_username" class="form-control" required autofocus />

	<label for="loginForm_password" class="sr-only">Password</label>
	<input type="password" placeholder="Password" id="loginForm_password" class="form-control" required />

	<button id="loginForm_submit" class="btn btn-primary btn-flat">Login</button>
</form>
<form action="/auth/login" method="post" id="h_loginForm">
	<input type="hidden" id="h_loginForm_username" name="username" />
	<input type="hidden" id="h_loginForm_passhash" name="password" />
</form>